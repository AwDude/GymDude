<resources>

	<!-- THEMES -->

	<style name="Theme.App" parent="Theme.AppCompat.NoActionBar">
		<item name="android:windowTranslucentNavigation">true</item>
		<item name="android:windowDrawsSystemBarBackgrounds">true</item>
		<item name="android:background">@color/colorPrimaryDark</item>
		<item name="android:elevation">0dp</item>

		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>

		<item name="android:textSize">@dimen/text_size_m</item>
		<item name="android:textColor">@color/colorText</item>
	</style>

	<style name="Theme.Popup" parent="Theme.App">
		<item name="android:background">@color/colorPrimary</item>
	</style>

	<style name="Theme.Item" parent="Theme.App">
		<item name="android:background">@null</item>
	</style>

	<style name="Theme.Toolbar" parent="Theme.App">
		<item name="android:background">@color/colorPrimary</item>
	</style>

	<!-- STYLES -->

	<style name="Item">
		<item name="android:layout_margin">@dimen/space_xs</item>
		<item name="cardBackgroundColor">@color/colorSecondary</item>
		<item name="cardCornerRadius">@dimen/corner_radius</item>
	</style>

	<style name="Spinner">
		<item name="android:background">@color/colorPrimary</item>
		<item name="android:spinnerMode">dropdown</item>
		<item name="android:overlapAnchor">false</item>
	</style>

	<style name="TabLayout">
		<item name="android:textSize">@dimen/text_size_m</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textColor">@color/state_colors</item>
	</style>

	<style name="Button">
		<item name="android:elevation">@dimen/elevation</item>
		<item name="android:background">@color/colorAccent</item>
	</style>

	<style name="FloatingActionButton">
		<item name="maxImageSize">@dimen/space_l</item>
		<item name="android:elevation">@dimen/elevation</item>
		<item name="tint">@color/colorIconAccent</item>
		<item name="android:backgroundTint">@color/colorAccent</item>
		<item name="borderWidth">0dp</item>
	</style>

</resources>
